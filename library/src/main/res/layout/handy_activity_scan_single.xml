<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.handy.qrcode.support.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.handy.titlebar.HandyTitleBar
        android:id="@+id/common_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:handy_bottomLineColor="@color/handy_titlebar_bottomLine_background"
        app:handy_bottomLineHeight="1dp"
        app:handy_mainTextColor="@color/handy_titlebar_mainTextColor"
        app:handy_statusBarBackgroundColor="@color/handy_titlebar_background"
        app:handy_titleBarBackground="@color/handy_titlebar_background" />
</RelativeLayout>
